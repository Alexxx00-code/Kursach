<Window x:Class="WpfApp1.Autor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Autor" >
    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Логин"     Height="30" Width="80"/>
            <TextBox Text="{Binding Login}" Name="login"  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="30" Width="120" />
            <Label  Content="Пароль"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" />
            <PasswordBox   x:Name="pas"  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="30" Width="120"  />
            <ComboBox ItemsSource="{Binding Vibor}" SelectedItem="{Binding SelectVibor}" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="120" Height="30"/>
            <Button Command="{Binding OK}" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
           
        </StackPanel>
    </Grid>
</Window>
