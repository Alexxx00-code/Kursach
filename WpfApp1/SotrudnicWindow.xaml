<Window x:Class="WpfApp1.SotrudnicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SotrudnicWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Frame x:Name="Page" Grid.Row="1" NavigationUIVisibility="Hidden" />

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"   Command="{Binding ClientViev}">Клиенты</Button>
            <Button Grid.Column="1"  Command="{Binding OperaciiViev}" >Операции на ожидании</Button>
            <Button Grid.Column="2"   Command="{Binding VkladViev}">Программы вкладов</Button>
            <Button Grid.Column="3"   Command="{Binding Perevod}" >Переводы</Button>
        </Grid>
    </Grid>
</Window>
